library(pracma)
## calculating present value
pv.simple(r=0.10,n=1,fv=100)
## calculating future value
fv.simple(r=0.10,n=10,pv=100000)
## future value of annuity
## Ordinary annuity
## at the end of the year
fv.annuity(r=0.10,n=4,pmt=1000,type=0)
fv.annuity(r=0.10,n=4,pmt=1000,type=1)
## present value of annuity
pv.annuity(r=0.10,n=10,pmt=1000)
## annity calculation for loan
pmt(r=0.10,n=30,pv=500000,fv=0)
